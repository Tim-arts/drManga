<section class="modal-body-container animated animatedFadeInUp" data-form="login" data-step="0">
    <header class="text-center">
        <div class="modal-content-title">
            <h1 class="mt-3">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</h1>
            <div class="my-1">
                <span class="text-purple-dark">{{ 'login_form.access_account'|trans }}</span>
            </div>
        </div>
    </header>
    <form id="fos_user_login_form" name="fos_user_login_form" action="{{ path("fos_user_security_check") }}" method="post" novalidate>
        <div class="modal-body mb-1">
            <div class="form-block form-sm mb-4">
                <input type="text" id="_username" name="_username" class="form-control no-border w-100 text-white bg-grey-dark" minlength="3" maxlength="20" placeholder="Nom d'utilisateur" data-type="name">
            </div>
            <div class="form-block form-sm mb-4">
                <input type="password" id="_password" name="_password" class="form-control no-border w-100 text-white bg-grey-dark" minlength="5" maxlength="20" placeholder="Mot de passe" data-type="password">
            </div>
            <div class="row mb-4 text-center text-lg-left">
                <div class="col-sm">
                    <div class="pretty p-default p-bigger p-default p-round p-thick p-smooth">
                        <input type="checkbox" id="remember_me" name="_remember_me" />
                        <div class="state p-success">
                            <label>{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                        </div>
                    </div>
                </div>
                <div class="col-sm text-sm-left text-md-right mt-lg-1 mt-sm-3">
                    <a href="#" id="login-display-forgot-section" data-section-open="forgot" data-section-close="login">{{ 'forgot_your_password'|trans }}</a>
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.refreshToken('authenticate') }}" />
            <div class="row mt-4">
                <button type="button" id="login-display-register-section" class="btn rounded high upper contains-icon mx-auto mr-lg-auto theme-3" data-section-open="register" data-section-close="login">
                    <span>{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</span>
                    <span class="icon bg-grey-darker">
                        <img src="{{ asset('img/svg/right-chevron-white.svg') }}" class="svg small vertical-align-sub" alt="Direction droite" />
                    </span>
                </button>
                <button type="submit" class="btn rounded high upper no-border contains-icon theme-2 mt-2 mt-lg-0 mx-auto ml-lg-auto">
                    <span>{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</span>
                    <span class="icon bg-grey-darker">
                        <img src="{{ asset('img/svg/right-chevron-white.svg') }}" class="svg small vertical-align-sub" alt="Direction droite" />
                    </span>
                </button>
            </div>
        </div>
    </form>
</section>
