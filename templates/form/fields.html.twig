{% block date_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {{ block('form_widget_simple') }}
    {% else %}
        <div class="d-flex flex-column flex-lg-initial">
            <div class="mt-2 input-group inline justify-content-center">
                <div class="w-100 mr-lg-auto">
                    {{ form_widget(form.day, {'id': 'register-select-day', 'placeholder': 'label.day', 'attr': {'class':'w-100', 'data-type': 'birthDateDay'}}) }}
                </div>
            </div>
            <div class="mt-2 mx-lg-2 input-group inline justify-content-center">
                <div class="w-100">
                    {{ form_widget(form.month, {'id': 'register-select-month', 'placeholder': 'label.month', 'attr': {'class':'w-100', 'data-type': 'birthDateMonth'}}) }}
                </div>
            </div>
            <div class="mt-2 input-group inline justify-content-center">
                <div class="w-100 ml-lg-auto">
                    {{ form_widget(form.year, {'id': 'register-select-year', 'placeholder': 'label.year', 'attr': {'class':'w-100 ml-lg-auto', 'data-type': 'birthDateYear'}}) }}
                </div>
            </div>
        </div>
    {% endif %}
{% endspaceless %}
{% endblock date_widget %}
